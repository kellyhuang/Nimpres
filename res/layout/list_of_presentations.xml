<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:text="Find Presenter by ID (e-mail address):"
		android:id="@+id/lopFindPresenter" android:layout_width="wrap_content"
		android:layout_height="wrap_content"></TextView>
	<EditText android:layout_width="match_parent" android:text=""
		android:id="@+id/lopPresenterID" android:layout_height="wrap_content"></EditText>
	<Button android:text="Search" android:id="@+id/lopSearch"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<ListView android:id="@android:id/list" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<TextView android:id="@+id/lopEmpty" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="No Presentations are currently behing hosted by that presenter" />
</LinearLayout>
