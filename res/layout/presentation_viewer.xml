<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/pvTitle"
		android:text="Viewing:Title" />
	<ImageView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_below="@id/pvTitle"
		android:id="@+id/pvSlide" android:src="@drawable/icon"></ImageView>

	<Button android:text="Back" android:id="@+id/pvBack" android:layout_below="@id/pvSlide"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<Button android:text="Next" android:id="@+id/pvNext" android:layout_toRightOf="@id/pvBack" android:layout_below="@id/pvSlide"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<Button android:text="Leave" android:id="@+id/pvLeave" android:layout_toRightOf="@id/pvNext" android:layout_below="@id/pvSlide"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<Button android:text="Pause/Resume" android:id="@+id/pvPR" android:layout_toRightOf="@id/pvLeave" android:layout_below="@id/pvSlide"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</RelativeLayout>
